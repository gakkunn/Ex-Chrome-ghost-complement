{
  "manifest_version": 3,
  "name": "Ghost Phrase Complement",
  "version": "1.0.0",
  "description": "Display phrases as ghost text, confirm with Tab, and alert on non-English input in AI chatbots.",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://chatgpt.com/*",
        "*://chat.openai.com/*",
        "*://gemini.google.com/*",
        "*://claude.ai/*"
      ],
      "js": ["content-scripts/main.js"],
      "css": ["styles/content.css"],
      "run_at": "document_end"
    }
  ],

  "permissions": ["storage"],

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Ghost Phrase Complement"
  }
}
